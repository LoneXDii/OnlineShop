      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "SwaggerKey": "users"
    },
    {
      "UpstreamPathTemplate": "/products/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get", "Put", "Delete" ],
