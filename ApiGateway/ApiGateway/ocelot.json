      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7002
        }
      ],
      "SwaggerKey": "products"
    },
    {
      "UpstreamPathTemplate": "/orders/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get", "Put", "Delete" ],
